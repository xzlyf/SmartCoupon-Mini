/* pages/goodsDetail/goodsDetail.wxss */
page {
    background-color: rgb(233, 233, 233);
}

/* ----------banner 样式----------- */
.banner {
    width: 100%;
    height: 460rpx;
}

.banner-swiper {
    width: 100%;
    height: 460rpx;
}

.banner-image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

/* 内容主体样式 */
.content {
    padding: 10rpx;
    background-color: white;
}

.content-title {
    color: rgb(58, 58, 58);
    font-weight: 800;
    font-size: 34rpx;
    display: block;
}

.content-desc {
    margin: 15rpx;
    display: block;
    background-color: white;
    padding: 15rpx;
    border-radius: 15rpx;
}

.content-desc-item {
    font-size: 30rpx;
    color: rgb(58, 58, 58);
    font-weight: 800;
    display: block;
    margin-bottom: 15rpx;
}

.content-desc-text {
    font-size: 28rpx;
    color: rgb(94, 94, 94);
    display: inline-block;
}

.content-price {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.goods-sym {
    color: #e74c3c;
    font-size: 28rpx;
    margin-left: 20rpx;
    font-weight: bold;
}

.goods-actual {
    color: #e74c3c;
    font-size: 48rpx;
    font-weight: bolder;

}

.goods-plan {
    color: #e74c3c;
    font-size: 28rpx;
    font-weight: bold;
    margin-right: 20rpx;
}

.goods-original {
    color: gray;
    font-size: 28rpx;
    text-decoration: line-through;
    font-style: italic;
}

.goods-sale {
    color: gray;
    font-size: 28rpx;
    float: right;
    margin-top: 20rpx;
    margin-right: 20rpx;
}

.content-gift {
    margin-left: 20rpx;
    padding: 8rpx;
    position: relative;
}

.gift-name {
    font-size: 30rpx;
    color: rgb(58, 58, 58);
    font-weight: 800;
    margin-right: 40rpx;
    float: left;
}

.gift-item {
    color: rgb(134, 134, 134);
    font-size: 28rpx;
}

.gift-item::before {
    content: " ☑ ";
}

.footer-box {
    width: 100%;
    height: 110rpx;
    background-color: rgb(255, 255, 255);
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    box-shadow: 0 0 4rpx #242424;
}

.planBtn {
    position: absolute;
    right: 0;
}

.shareBtn {
    width: 280rpx;
    height: 110rpx;
    background-color: #FF9800;
    color: white;
    text-align: center;
    line-height: 110rpx;
    float: right;
}

.couponBtn {
    width: 280rpx;
    height: 110rpx;
    background-color: #e74c3c;
    color: white;
    text-align: center;
    line-height: 110rpx;
    float: right;
}

.cart {
    width: 150rpx;
    height: 110rpx;
    text-align: center;
    line-height: 80rpx;
}

.btn {
    width: 80px;
    height: 35px;
    background: #44b549;
    line-height: 35px;
    text-align: center;
    color: #fff;
    font-size: 15px;
    margin: 20px auto;
    border-radius: 100px;
}

/* 遮罩层 */
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}

/* 弹出层 */
.modalDlg {
    width: 70%;
    position: fixed;
    top: 250rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialogTitle {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    font-weight: 800;
    background-image: linear-gradient(to right, #F37335, #FDC830);
    color: white;
    border-radius: 5px 5px 0px 0px;
}

.dialogContent {
    margin-top: 20rpx;
    width: 95%;
}

.dialogContent Text {
    display: block;
    font-size: 28rpx;
    color: gray;
}

.secretText {
    color: gray;
    background-color: rgb(221, 221, 221);
    margin: 20rpx;
    padding: 8rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    /* 多出不分隐藏 */
    overflow: hidden;
    /* 竖直方向的超出和隐藏 */
    -webkit-box-orient: vertical;
    /* 设定行数为1 */
    -webkit-line-clamp: 3;
}

/* 弹出层里面的按钮 */
.ok {
    width: 120px;
    height: 35px;
    background: #44b549;
    line-height: 35px;
    text-align: center;
    color: #fff;
    font-size: 15px;
    margin-bottom: 20rpx;
    border-radius: 100px;
}