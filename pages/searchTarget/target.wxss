/* pages/searchTarget/target.wxss */
.searchBar {
  width: 100%;
  background-color: #e74c3c;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.searchType {
  position: relative;
  left: 35rpx;
  border-radius: 5px;
}

.searchType-item {
  color: #e74c3c;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: white;
  font-size: 30rpx;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}

.searchType-item-checked {
  color: #ffffff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #f77b6d;
  font-size: 34rpx;
  font-weight: 600;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding-top: 5rpx;
}

.weui-search-bar {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #e74c3c;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 10px;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 0 5px 5px 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
  margin-left: 35rpx;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  height: 60rpx;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 34px;
  line-height: 34px;
  font-size: 14px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  margin-right: 10px;
  line-height: 34px;
  color: #ffffff;
  white-space: nowrap;
}


  /* ----------商品列表样式------------- */
.goods-scroll-view {
  width: 100%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  background-color: rgb(240, 240, 240);

}

.goods-view {
  width: 325rpx;
  height: auto;
  padding: 17rpx;
  border-radius: 15rpx;
  background-color: white;
  margin-left: 10rpx;
  margin-top: 10rpx;
  float: left;
}

.goods-img {
  width: 320rpx;
  height: 320rpx;
  border-radius: 20rpx;
}

.goods-dtitle {
  font-size: 28rpx;
  width: 340rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  /* 多出不分隐藏 */
  overflow: hidden;
  /* 竖直方向的超出和隐藏 */
  -webkit-box-orient: vertical;
  /* 设定行数为1 */
  -webkit-line-clamp: 1;
}

.goods-sym {
  color: #e74c3c;
  margin-left: 20rpx;
}

.goods-actual {
  color: #e74c3c;
  font-size: 38rpx;
  font-weight: bold;

}

.goods-plan {
  color: #e74c3c;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.goods-original {
  color: gray;
  font-size: 24rpx;
  text-decoration: line-through
}